{
  "openapi": "3.0.0",
  "info": {
    "title": "w2s Project API",
    "version": "1.0.0",
    "description": "API documentation for authentication and user management."
  },
  "servers": [
    {
      "url": "https://w2s-backend.onrender.com"
    },
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["AUTH"],
        "summary": "Register User",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" }
                },
                "required": ["name", "email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP sent to email. Verify to complete registration"
          },
          "400": { "description": "Invalid request" },
          "409": { "description": "Email already exists" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["AUTH"],
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/auth/verify-otp": {
      "post": {
        "tags": ["AUTH"],
        "summary": "Verify OTP",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "otp": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "otp", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User verified & registered successfully" },
          "401": { "description": "Invalid or expired OTP" }
        }
      }
    },
    "/api/auth/forgot-password": {
      "post": {
        "tags": ["AUTH"],
        "summary": "Forgot Password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "OTP sent to email for password reset" },
          "500": { "description": "Failed to send or save OTP" }
        }
      }
    },
    "/api/auth/reset-password": {
      "post": {
                "tags": ["AUTH"],

        "summary": "Reset Password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "otp": { "type": "string" },
                  "newPassword": { "type": "string", "minLength": 6 }
                },
                "required": ["email", "otp", "newPassword"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Password reset successfully" },
          "401": { "description": "Invalid or expired OTP" }
        }
      }
    },
    "/api/user/profile": {
      "get": {
                "tags": ["USER"],

        "summary": "Get User Profile",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer yourAuthToken"
            },
            "description": "JWT token for authorization"
          }
        ],
        "responses": {
          "200": {
            "description": "User profile retrieved",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          },
          "404": { "description": "User not found" }
        }
      }
    },
    "/api/user/update-email": {
      "put": {
                "tags": ["USER"],

        "summary": "Update User Email",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer yourAuthToken"
            },
            "description": "JWT token for authorization"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "newEmail": { "type": "string", "format": "email" }
                },
                "required": ["newEmail"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Email updated successfully" },
          "409": { "description": "Email already in use" }
        }
      }
    },
    "/api/user/update-profile": {
      "put": {
        "tags": ["USER"],
        "summary": "Update User Profile",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer yourAuthToken"
            },
            "description": "JWT token for authorization"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Profile updated successfully" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        }
      }
    }
  }
}
